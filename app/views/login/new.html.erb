<div class="container d-flex justify-content-center">
  <div class="card">
    <h4 class="card-header"><i class="fa fa-door-open"></i> <%= t('menu.signin') %></h4>
    <%= render 'shared/flash_messages' %>
    <div class="card-body">
      <%= form_tag login_path do %>
        <div class="mb-3">
          <i class="fa fa-envelope"></i> <%= label_tag :email, t("mongoid.attributes.user.email"), class: 'form-label' %>
          <%= email_field_tag :email, nil, class: "form-control", autofocus: true %>
        </div>

        <div class="mb-3">
          <i class="fa fa-lock"></i> <%= label_tag :password, t("mongoid.attributes.user.password"), class: 'form-label' %>
          <%= password_field_tag :password, nil, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= submit_tag t("form.submit.login"), class: 'btn btn-primary' %>
        </div>
        <%= hidden_field_tag 'redirect', @redirect %>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <p><%= t("login.if_you_do_not_have_an_account_yet") %> <%= link_to t("login.register_here"), new_user_path %></p>
      <p><%= link_to t("new.user.forgotten_password"), new_password_reset_path %></p>
    </div>
  </div>
</div>
