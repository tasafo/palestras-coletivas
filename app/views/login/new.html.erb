
<div class="container">

  <%= form_tag login_path do %>

    <div class="text-field-container">
      <div class="mdc-text-field text-field mdc-text-field--upgraded" style="width: 100%">
        <%= email_field_tag :email, nil, class: "mdc-text-field__input" %>
        <%= label_tag :email, t("labels.user.email"), class: 'mdc-floating-label' %>
        <div class="mdc-line-ripple"></div>
      </div>
    </div>

    <div class="text-field-container">
      <div class="mdc-text-field text-field mdc-text-field--upgraded" style="width: 100%">
        <%= password_field_tag :password, nil, class: "mdc-text-field__input" %>
        <%= label_tag :password, t("labels.user.password"), class: 'mdc-floating-label' %>
        <div class="mdc-line-ripple"></div>
      </div>
    </div>

    <div class="text-field-container">
      <div style="width: 100%; margin: 20px 0 20px 0">
        <button class="mdc-button mdc-button--raised mdc-ripple-upgraded"><%= t("form.submit.login") %></button>
      </div>
    </div>

    <div class="text-field-container">
      <div style="width: 100%; margin: 20px 0 100px 0">
        <p><%= t("login.if_you_do_not_have_an_account_yet") %> <%= link_to t("login.register_here"), new_user_path %></p>
        <p><%= link_to t("new.user.forgotten_password"), new_password_reset_path %></p>
      </div>
    </div>

    <%= hidden_field_tag 'redirect', @redirect %>
  <% end %>
</div>
