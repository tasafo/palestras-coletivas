  <hr/>
  <%= render "shared/paginate", list: pagy %>
  <div class="row">
    <% talks.each_with_index do |talk, index| %>
      <div class="ol-xs-12 col-sm-4 col-md-3 col-lg-3 col-xl-2 card-talk">
        <div class="card">
          <div class="view overlay hm-white-slight view-card-event card-event-<%= index %>">
            <%= link_to talk_path(talk) do %>
              <% if talk.thumbnail.blank? %>
                <div class="mask"></div>
              <% else %>
                <%= image_tag(talk.thumbnail_image, size: '160x120', class: 'card-img-top') %>
              <% end %>
            <% end %>
          </div>

          <div class="card-body">
            <% if show_user %>
              <% talk.users.each do |user| %>
                <%= render "shared/user_thumb", user: user %>
              <% end %>
            <% end %>

            <p class="card-title"><%= link_to(talk.title, talk_path(talk)) %></p>

            <p class="card-text"><%= render 'shared/tags', object: talk %></p>

            <p class="card-text">
              <small class="text-muted">
                <%= t("created_time", time: time_ago_in_words(talk.created_at)) %>
              </small>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <hr/>
  <%= render "shared/paginate", list: pagy %>
