  <%= render "shared/paginate", list: pagy %>

  <div class="row">
    <% talks.each do |talk| %>
      <div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
        <div class="box-talk">
          <%= link_to image_tag(talk.thumbnail_image, width: '170', height: '128'), talk_path(talk) %>

          <% if show_user %>
            <% talk.users.each do |user| %>
              <%= render "shared/user_thumb", user: user %>
            <% end %>
          <% end %>

          <p><%= link_to Utility.suspension_points(talk.title, 60), talk_path(talk) %></p>

          <span><%= t("created_time", time: time_ago_in_words(talk.created_at)) %></span>
        </div>
      </div>
    <% end %>
  </div>

  <%= render "shared/paginate", list: pagy %>
