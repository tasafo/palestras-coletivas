  <fieldset>
    <legend><p class="text-info"><%= t("new.invite.group") %></p></legend>

    <div class="m-input-append">
      <%= select_tag("group_id", options_from_collection_for_select(groups, "id", "name"), :class => "m-wrap m-ctrl-medium") %>
      <input type="button" id="add_group" class="m-btn green" value="<%= t("new.invite.add") %> "/>
    </div>

    <div id="groups">
      <table id="table_groups" class="table table-striped">
        <thead>
          <tr>
            <th width="50%"><%= t("new.invite.table.group") %></th>
            <th width="50%"><%= t("new.invite.table.operation") %></th>
          </tr>
        </thead>
        <tbody>
          <% if model.groups %>
            <% model.groups.by_name.each do |g| %>
              <tr id="row_<%= g.id %>">
                <td>
                  <%= g.name %><input type="hidden" name="groups[]" value="<%= g.id %>" />
                </td>
                <td>
                  <input type="button" id="group_id_<%= g.id %>" class="m-btn red" value="<%= t("new.invite.js.remove") %>" onclick="remove_group('<%= g.id %>')" />
                </td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </fieldset>
