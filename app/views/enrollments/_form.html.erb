<%= form_for(@enrollment, url: url, html: {class: 'form-horizontal'}) do |f| %>
  <% unless @enrollment.new_record? %>
    <h2 class="<%= @presenter.type_message %>"><%= @presenter.button_message %></h2>

    <% unless @presenter.user_name.nil? %>
      <h3><%= @presenter.user_name %></h3>
    <% end %>

    <%= f.hidden_field @option_type, value: @presenter.option_value %>

    <% unless @presenter.option_value %>
      <%= f.hidden_field :present, value: false %>
    <% end %>
  <% end %>

  <%= f.hidden_field :event_id, value: @event.id %>
  <%= f.hidden_field :user_id, value: @presenter.user_id %>

  <div class="container">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
          event_path(@event), class: 'btn btn-default' %>
  </div>
<% end %>
